# === DATABASE ===
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@localhost:5432/ecommerce_db

# === APPLICATION ===
# Environment: development, production, test
NODE_ENV=development

# Application port
PORT=3000

# API prefix for all endpoints
API_PREFIX=api

# === LOGGING ===
# Log level: debug, info, warn, error
LOG_LEVEL=info

# === AUTHENTICATION ===
# JWT secret key (min 32 characters)
JWT_SECRET=your-secret-key-min-32-characters-change-in-production

# JWT access token expiration (short-lived)
JWT_EXPIRATION=15m

# JWT refresh secret key (min 32 characters)
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters-change-in-production

# JWT refresh token expiration (long-lived)
JWT_REFRESH_EXPIRATION=7d

# === CORS ===
# CORS allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# === REDIS (Optional) ===
# Redis connection string
# Leave empty to disable caching
REDIS_URL=redis://localhost:6379

# === STRIPE (Optional) ===
# Stripe Secret Key (start with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_your-key-here

# Stripe Publishable Key (start with pk_test_ or pk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here

# Stripe Webhook Secret (start with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# === EMAIL (Optional) ===
# SMTP Server host
SMTP_HOST=smtp.gmail.com

# SMTP Server port (typically 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Use TLS for SMTP connection
SMTP_SECURE=false

# SMTP authentication username
SMTP_USER=your-email@gmail.com

# SMTP authentication password
SMTP_PASSWORD=your-app-specific-password

# Email sender address
SMTP_FROM=noreply@ecommerce.example.com

# === AWS S3 (Optional) ===
# AWS region for S3 bucket
AWS_REGION=us-east-1

# AWS Access Key ID
AWS_ACCESS_KEY_ID=your-access-key-id

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Bucket name
AWS_S3_BUCKET=your-bucket-name
